{
  "openapi": "3.0.0",
  "info": {
    "title": "Indicatiehulp Triage API",
    "version": "1.0.0",
    "description": "API voor het geven van een zorgadvies op basis van cliëntkenmerken (adl, gedrag, cognitie, mantelzorg)."
  },
  "servers": [
    {
      "url": "https://indicatiehulp-api.onrender.com"
    }
  ],
  "paths": {
    "/api/advies": {
      "post": {
        "summary": "Geef indicatieadvies",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "adl": {
                    "type": "string"
                  },
                  "gedrag": {
                    "type": "string"
                  },
                  "cognitie": {
                    "type": "string"
                  },
                  "mantelzorg": {
                    "type": "string"
                  }
                },
                "required": [
                  "adl",
                  "gedrag",
                  "cognitie",
                  "mantelzorg"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Succesvol advies",
            "content": {
              "application/json": {
                "example": {
                  "advies": "WLZ VV5",
                  "onderbouwing": "Cliënt heeft ernstige beperkingen met gedragsproblemen."
                }
              }
            }
          }
        }
      }
    }
  }
}